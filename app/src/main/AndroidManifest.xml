<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.noteapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteApplication">
        <activity android:name=".SignUp" android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"></activity>
        <activity android:name=".StatusActivity" />
        <activity
            android:name=".Login"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.NoteApplication.NoActionBar" />
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>